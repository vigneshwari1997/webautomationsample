{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
             "always"
            ],
        "indent": [
            2,
            4
        ],
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "no-unused-vars":[
            "off",
            "always"
        ],
        "typeof": false
    },
    "globals": {
        "$": true,
        "browser": true
    },
    "plugins": [
        "wdio",
        "import"
    ]
}
    

